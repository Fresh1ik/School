import telebot
from telebot.types import ReplyKeyboardMarkup, KeyboardButton
import random
import schedule
T = "7659801684:AAHsgvcE6DPekycV6RZiNyElQ8-bsmoH5uc"
ID = 1020263895
bot = telebot.TeleBot(T)
mot = "–ß–∞—Å –¥—ñ—è—Ç–∏ ‚Äì –º—Ä—ñ—ó —Å–∞–º—ñ —Å–µ–±–µ –Ω–µ –∑–¥—ñ–π—Å–Ω—è—Ç—å! üöÄ", "–ö–æ–∂–µ–Ω –∫—Ä–æ–∫ –Ω–∞–±–ª–∏–∂–∞—î —Ç–µ–±–µ –¥–æ –º–µ—Ç–∏ ‚Äì –≤–ø–µ—Ä–µ–¥! üí™", "–í—ñ—Ä —É —Å–µ–±–µ —Ç–∞ –ø–æ—á–∏–Ω–∞–π –ø—Ä—è–º–æ –∑–∞—Ä–∞–∑! ‚ú®", "–ù–∞–π–∫—Ä–∞—â–∏–π –º–æ–º–µ–Ω—Ç ‚Äì —Ü–µ –∑–∞—Ä–∞–∑! üî•", "–ú–∞–ª–µ–Ω—å–∫—ñ –¥—ñ—ó —Å—å–æ–≥–æ–¥–Ω—ñ = –≤–µ–ª–∏–∫—ñ –¥–æ—Å—è–≥–Ω–µ–Ω–Ω—è –∑–∞–≤—Ç—Ä–∞! üå±", "–£—Å–ø—ñ—Ö –ø–æ—á–∏–Ω–∞—î—Ç—å—Å—è –∑ –ø–µ—Ä—à–æ–≥–æ –∫—Ä–æ–∫—É ‚Äì –∑—Ä–æ–±–∏ –π–æ–≥–æ! üèÜ"
motram = random.choice(mot)
k = ["–¢–∏ –º–æ–ª–æ–¥–µ—Ü—å!", "–¢–∞–∫ —Ç—Ä–∏–º–∞—Ç–∏!", "–ß—É–¥–æ–≤–∞ —Ä–æ–±–æ—Ç–∞!"]
k1 = random.choice(k)
todolist = []
@bot.message_handler(commands=["help"])
def help(message):
    bot.send_message(message.chat.id, "–Ø–∫—â–æ —Ç–æ–±—ñ –ø–æ—Ç—Ä—ñ–±–Ω–æ –ø–µ—Ä–µ–≥–ª—è–Ω—É—Ç–∏ —Å–≤—ñ–π —Å–ø–∏—Å–æ–∫ —Å–ø—Ä–∞–≤, –Ω–∞–ø–∏—à–∏ '–ü–æ–∫–∞–∑–∞—Ç–∏ —Å–ø–∏—Å–æ–∫'. \n–Ø–∫—â–æ –ø–æ—Ç—Ä—ñ–±–Ω–æ –¥–æ–¥–∞—Ç–∏ —Å–ø—Ä–∞–≤—É, –Ω–∞–ø–∏—à–∏ –∑–∞ –∑—Ä–∞–∑–∫–æ–º: –î–æ–¥–∞—Ç–∏: —Å–ø—Ä–∞–≤–∞. \n–Ø–∫—â–æ –ø–æ—Ç—Ä—ñ–±–Ω–æ –≤–∏–¥–∞–ª–∏—Ç–∏, –ø–∏—à–∏ –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è –∑–∞ –∑—Ä–∞–∑–∫–æ–º: –í–∏–¥–∞–ª–∏—Ç–∏: —Å–ø—Ä–∞–≤–∞. –ü–µ—Ä–µ–∫–æ–Ω–∞–π—Å—è –≤ —Ç–æ–º—É, —â–æ —Ü—è —Å–ø—Ä–∞–≤–∞ —î —É —Å–ø–∏—Å–∫—É!")

@bot.message_handler(commands=["info"])
def info(message):
    bot.send_message(message.chat.id,"–¶–µ–π –±–æ—Ç - —Å–ø–∏—Å–æ–∫ —Ç–≤–æ—ó—Ö —Å–ø—Ä–∞–≤. –¢–∏ –º–æ–¥–µ—à—å –≤–∏–¥–∞–ª–∏—Ç–∏ —Ç–µ, —â–æ –≤–∂–µ –∑—Ä–æ–±–∏–≤, –∞–±–æ –¥–æ–¥–∞—Ç–∏ –Ω–æ–≤—É —Å–ø—Ä–∞–≤—É! –ó–∞—Ä–∞–¥–∏ –¥–æ–ø–æ–º–æ–≥–∏ –ø–∏—à–∏ /help")

@bot.message_handler(commands=['start'])
def send_welcome(message):
    keyb = ReplyKeyboardMarkup(resize_keyboard=True)
    button1 = KeyboardButton("–ü–æ–∫–∞–∑–∞—Ç–∏ —Å–ø–∏—Å–æ–∫")
    keyb.add(button1)
    bot.send_message(message.chat.id, "–ü—Ä–∏–≤—ñ—Ç! –û–±–µ—Ä–∏, —è–∫ —Ç–∏ —Ö–æ—á–µ—à —Ä–µ–¥–∞–≥—É–≤–∞—Ç–∏ —Å–≤—ñ–π —Å–ø–∏—Å–æ–∫. –Ø–∫—â–æ –ø–æ—Ç—Ä—ñ–±–Ω–∞ –¥–æ–ø–æ–º–æ–≥–∞, –Ω–∞–ø–∏—à–∏ /help", reply_markup=keyb)

@bot.message_handler(func=lambda message: True)
def send_if(message):
    q = message.text
    w = q.split(":", maxsplit=1) 
    try:
        if w[0].strip() == "–î–æ–¥–∞—Ç–∏":
            todolist.append(w[1].strip())
            bot.send_message(message.chat.id, "–°–ø—Ä–∞–≤—É –î–æ–¥–∞–Ω–æ!")

        elif w[0].strip() == "–í–∏–¥–∞–ª–∏—Ç–∏":
            task = w[1].strip()
            if task in todolist:
                todolist.remove(task)
                bot.send_message(message.chat.id, f"–°–ø—Ä–∞–≤—É –í–∏–¥–∞–ª–µ–Ω–æ! {k1}")
            else:
                bot.send_message(message.chat.id, " –¢–∞–∫–æ—ó –∑–∞–¥–∞—á—ñ –Ω–µ–º–∞—î! –ü–µ—Ä–µ–≤—ñ—Ä—Ç–µ —Å–ø–∏—Å–æ–∫ –∑–∞ –¥–æ–ø–æ–º–æ–≥–æ—é –∫–Ω–æ–ø–∫–∏ *–ü–æ–∫–∞–∑–∞—Ç–∏ —Å–ø–∏—Å–æ–∫*")

        else:
            bot.send_message(message.chat.id, " –ù–µ–≤—ñ–¥–æ–º–∞ –∫–æ–º–∞–Ω–¥–∞! –í–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É–π—Ç–µ:\n –î–æ–¥–∞—Ç–∏: –∑–∞–≤–¥–∞–Ω–Ω—è\n –í–∏–¥–∞–ª–∏—Ç–∏: –∑–∞–≤–¥–∞–Ω–Ω—è\n –ü–æ–∫–∞–∑–∞—Ç–∏ —Å–ø–∏—Å–æ–∫")

    except IndexError: 
        bot.send_message(message.chat.id, " –í–∏ –∑–∞–±—É–ª–∏ –≤–∫–∞–∑–∞—Ç–∏ –∑–∞–¥–∞—á—É! –ü—Ä–∏–∫–ª–∞–¥:\n –î–æ–¥–∞—Ç–∏: –ö—É–ø–∏—Ç–∏ —Ö–ª—ñ–±\n –í–∏–¥–∞–ª–∏—Ç–∏: –ö—É–ø–∏—Ç–∏ —Ö–ª—ñ–±")

    if message.text == "–ü–æ–∫–∞–∑–∞—Ç–∏ —Å–ø–∏—Å–æ–∫":
        bot.send_message(message.chat.id, f"–û—Å—å —Å–ø–∏—Å–æ–∫ —Ç–≤–æ—ó—Ö —Å–ø—Ä–∞–≤üôÇ:\n {todolist}")

def send1():
    bot.send_message(ID, motram)

schedule.every().day.at("13:00").do(send1) 

    
bot.polling()


